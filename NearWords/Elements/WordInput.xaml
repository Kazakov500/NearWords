<UserControl x:Class="NearWords.Elements.WordInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NearWords.Elements"
             mc:Ignorable="d" d:DesignWidth="313.333" Height="27">
    <Grid Height="25" Margin="0">
        <Ellipse x:Name="btn_Delete" Fill="Red" HorizontalAlignment="Right" Width="25" StrokeThickness="0" Height="25"/>
        <Rectangle x:Name="rect_Color" Fill="#FFFF6767" HorizontalAlignment="Left" Width="25" Stroke="#FFFF8A8A" RadiusX="16" RadiusY="16" StrokeThickness="0"/>
        <Label x:Name="lbl_Similarity" Content="1" HorizontalAlignment="Right" Width="128.076" VerticalContentAlignment="Center" Margin="0,0,12.5,0" Background="#FFF0F0F0"/>
        <Label x:Name="lbl_Word" Content="Word" VerticalContentAlignment="Center" Margin="12.5,0,140.576,0" Background="#FFFBFBFB"/>
        <Rectangle Fill="#FFD1D1D1" Height="1" Margin="12.5,0" StrokeThickness="0" VerticalAlignment="Bottom"/>
        <Rectangle Fill="#FFD1D1D1" Height="1" Margin="12.5,0" StrokeThickness="0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
